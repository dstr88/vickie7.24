---
import { Image } from "astro:assets";
import TH from "../assets/titaniumHutLogo.png";
import FAQ from "./faq2.astro";

const today = new Date();
const currentYear = today.getFullYear();
---
<footer class="footer">
  <div class="footer-container">
    <div class="footer-column">
      <div class="scroll-box">
        <FAQ />
      </div>
    </div>
    <div class="footer-column">
      <div class="contact-info">
        <p>523 Lamar Alexander PKWY Maryville, TN</p>
        <p>
          <a href="tel:865-213-1535" class="phone-link">865-213-1535</a>
        </p>
        <a href="mailto:vickie@thelionslamb.com" class="mail-link">Contact Us</a>
        <Image src={TH} alt="Titanium Hut Logo" width={150} height={150} />
        <p>Website built by Titanium Hut</p>
      </div>
    </div>
    <div class="footer-column">
      <div class="scroll-box">
        <div class="termly-embed" data-id="407dea9e-b5ba-4b3d-8903-fba6655a9d75"></div>
        <script is:inline type="text/javascript">
          (function (d, s, id) {
            const tjs = d.getElementsByTagName(s)[0];
            if (!tjs || d.getElementById(id)) return;

            const js = d.createElement(s);
            if (js instanceof HTMLScriptElement) {
              js.id = id;
              js.src = "https://app.termly.io/embed-policy.min.js";
            }

            if (tjs && tjs.parentNode) {
              tjs.parentNode.insertBefore(js, tjs);
            }
          })(document, "script", "termly-jssdk");
        </script>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; {currentYear} Titanium Hut. All rights reserved.</p>
  </div>
</footer>

<style>
    .footer {
  background-color: #282c34;
  color: #ffffff;
  padding: 2rem 1rem;
  text-align: center;
}

.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.footer-column {
  flex: 1;
  min-width: 300px;
  padding: 1rem;
}

.scroll-box {
  max-height: 800px;
  overflow-y: auto;
  padding: 1rem;
  border: 1px solid #444;
  background-color: #333;
}

.contact-info {
  text-align: left;
}
.review-button {
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        color: white;
        font-weight: bold;
        transition: opacity 0.3s;
    }

    .review-button:hover {
        opacity: 0.8;
    }

    .google { background-color: #4285F4; }
    .yelp { background-color: #FF1A1A; }
    .facebook { background-color: #3b5998; }

    .branding {
        text-align: center;
    }

    .branding img {
        max-width: 150px;
        margin-bottom: 0.5rem;
    }
    mail-link {
        display: inline-block;
        background-color: #3498db;
        color: white;
        padding: 0.5rem 1rem;
        text-decoration: none;
        border-radius: 4px;
        margin-top: 0.5rem;
        transition: background-color 0.3s;
    }


.footer-bottom {
  margin-top: 2rem;
  font-size: 0.9rem;
}

@media (max-width: 768px) {
  .footer-container {
    flex-direction: column;
  }

  .footer-column:nth-child(2) {
    order: -1; /* Move the second column to the top */
  }
}

</style>