---
import { Image } from "astro:assets";
import logo from "../assets/logo.png"; // Adjust the path to your logo image
const consultLink = import.meta.env.CONSULT_LINK;
---
<div class="w3-card-4">
    <div class="navbar-logo">
       <div class="w3-container">
          <a href="/" class="home-link logo">
             <Image src={logo} alt="Logo" class="logo" />
          </a>
       </div>
       <br>
       <div class="w3-container">
          <p>The Lion's Lamb <br>Family Therapy LLC</p>
          <br>
       </div>
       <div class="w3-container"><!--telephone and number -->
          <a href="tel:865-213-1535" class="text-decoration-none">
             <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill=  "#4682B4" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
             </svg>
             <span class="ms-1 llamada">865-213-1535</span>
          </a>
          <br><br>
       </div>
       <div class="w3-container">
          <small>523 W. Lamar Alexander PKWY<br>Maryville, TN</small><br><br>
       </div>
       <div class="w3-container">
         <div class="w3-container">
            <a href={consultLink}>
              <button class="button">15 Minute Free Consult</button>
            </a>
          </div>
          <a href="https://www.therapyportal.com/p/lionslamb/"><button class="button">Member Login</button></a><br><br>
       </div>
       <div class="w3-container">
       </div>
    </div>
 </div>

 <style>
    .logo{
  border: 2px solid  #8B5B29;
  outline: 2px solid  #8B5B29;
  outline-offset: 2px;
  width: 70px;
 }

.w3-card-4{
    position: relative;
    transform: translateY(35px);
    margin-left: 20px;
    padding: 0;
    z-index: 1015;
    color: white;
}

.llamada{
    color: #E0FFFF;
    text-shadow: salmon;
}

.side-panel {

   
    transform: translateY(35px);
    
    color: white;
    position: absolute;
    
    height: 1000;
    background-color: transparent;
    width: 250px;
    
    box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    z-index: 1015;
}

.button {
    background: linear-gradient(45deg, #8B5B29, #488494, #7d4893);
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.button:hover {
    background: linear-gradient(45deg, #7d4893, #488494, #8B5B29);
    transform: scale(1.05);
}



 </style>